        <span class="modal-close" onclick="closeModal('modal-cartago')">X</span>
        <img src="https://ventanilla.sige.com.co/img/cartago.png" alt="Alcaldia de Cartago">
        <p>Alcaldia de Cartago</p>
      </div>
    </div>

    <div id="modal-union" class="modal hidden fixed inset-0 flex items-center justify-center modal-bg" onclick="closeModal('modal-union')">
      <div class="modal-content" onclick="event.stopPropagation()">
        <span class="modal-close" onclick="closeModal('modal-union')">X</span>
        <img src="https://ventanilla.sige.com.co/img/union.gif" alt="Alcaldia de la Union">
        <p>Alcaldia de la Union</p>
      </div>
    </div>

    <div id="modal-obando" class="modal hidden fixed inset-0 flex items-center justify-center modal-bg" onclick="closeModal('modal-obando')">
      <div class="modal-content" onclick="event.stopPropagation()">
        <span class="modal-close" onclick="closeModal('modal-obando')">X</span>
        <img src="https://ventanilla.sige.com.co/img/obando.svg" alt="Alcaldia de Obando">
        <p>Alcaldia de Obando</p>
      </div>
    </div>

    <div id="modal-roldanillo" class="modal hidden fixed inset-0 flex items-center justify-center modal-bg" onclick="closeModal('modal-roldanillo')">
      <div class="modal-content" onclick="event.stopPropagation()">
        <span class="modal-close" onclick="closeModal('modal-roldanillo')">X</span>
        <img src="https://ventanilla.sige.com.co/img/roldanillo1.jpg" alt="Alcaldia de Roldanillo">
        <p>Alcaldia de Roldanillo</p>
      </div>
    </div>

    <script>
      // Funciones para abrir y cerrar modales
      function openModal(modalId) {
        document.getElementById(modalId).classList.remove('hidden');
      }

      function closeModal(modalId) {
        document.getElementById(modalId).classList.add('hidden');
      }

      // Añadir eventos de clic a los logos
      document.getElementById('logo-alcala').addEventListener('click', function() {
        openModal('modal-alcala');
      });
      document.getElementById('logo-anserma').addEventListener('click', function() {
        openModal('modal-anserma');
      });
      document.getElementById('logo-cartago').addEventListener('click', function() {
        openModal('modal-cartago');
      });
      document.getElementById('logo-union').addEventListener('click', function() {
        openModal('modal-union');
      });
      document.getElementById('logo-obando').addEventListener('click', function() {
        openModal('modal-obando');
      });
      document.getElementById('logo-roldanillo').addEventListener('click', function() {
        openModal('modal-roldanillo');
      });
    </script>
</div>
