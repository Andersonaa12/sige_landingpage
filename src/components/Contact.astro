---
import Container from "./Container.astro";
---
<div  id="contact" >
    <Container>
        <section class="py-8 bg-white  p-2 rounded-xl bg-gradient-to-r" style="--tw-gradient-from: white; --tw-gradient-to: var(--bg-primary); --tw-shadow-color: var(--bg-primary); border-color: var(--bg-primary); box-shadow: 0 4px 6px -1px var(--bg-primary), 0 2px 4px -2px var(--bg-primary)">
          <h2 class="text-2xl font-bold text-center mb-4 p-2 bg-primary text-white ">Formulario de Contacto</h2>
          <form id="contact-form" class="space-y-6 max-w-lg mx-auto">
            <div>
              <label for="name" class="block text-gray-700 dark:text-gray-300 font-medium">Nombre</label>
              <input
                type="text"
                id="name"
                name="name"
                class="w-full p-3 border rounded-lg dark:bg-gray-800 dark:text-white"
                placeholder="Tu nombre"
                required
              />
            </div>
            <div>
              <label for="email" class="block text-gray-700 dark:text-gray-300 font-medium">Correo Electrónico</label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full p-3 border rounded-lg dark:bg-gray-800 dark:text-white"
                placeholder="Tu correo electrónico"
                required
              />
            </div>
            <div>
              <label for="message" class="block text-gray-700 dark:text-gray-300 font-medium">Mensaje</label>
              <textarea
                id="message"
                name="message"
                class="w-full p-3 border rounded-lg dark:bg-gray-800 dark:text-white"
                rows="5"
                placeholder="Tu mensaje"
                required
              ></textarea>
            </div>
            <button
                type="button"
                class="btn-primary w-full"
                onclick="submitForm()"
                >
                Enviar
                </button>

          </form>
        </section>
      
        <script>
          async function submitForm() {
            const form = document.getElementById("contact-form");
      
            // Crear un objeto con los datos del formulario
            const formData = {
              name: form.name.value,
              email: form.email.value,
              message: form.message.value,
            };
      
            try {
              // Enviar los datos a la API
              const response = await fetch("https://your-api-endpoint.com/contact", {
                method: "POST",
                headers: {
                  "Content-Type": "application/json",
                },
                body: JSON.stringify(formData),
              });
      
              if (response.ok) {
                alert("¡Mensaje enviado correctamente!");
                form.reset();
              } else {
                alert("Hubo un problema al enviar tu mensaje. Intenta nuevamente.");
              }
            } catch (error) {
              console.error("Error al enviar el formulario:", error);
              alert("Error de red. Verifica tu conexión e intenta nuevamente.");
            }
          }
        </script>
    </Container>
</div>

